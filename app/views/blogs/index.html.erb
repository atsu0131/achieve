<h1>ブログ一覧</h1>

<p><%= notice %></p>

<table class="table table-striped">
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>

    <td><%= link_to '詳細を確認する', blog_path(blog.id),class:"btn btn-primary" %></td>
    <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' } ,class:"btn btn-success"%></td>
    <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'},class:"btn btn-danger"%></td>

  </tr>
<% end %>
</table>

<br>

<td><%= link_to '新しくブログを投稿する',new_blog_path, class:"btn btn-info"%></td>
